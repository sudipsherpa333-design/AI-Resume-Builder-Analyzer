{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": false,
    "checkJs": false
  },
  "include": [
    "src",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    ".git"
  ]
}