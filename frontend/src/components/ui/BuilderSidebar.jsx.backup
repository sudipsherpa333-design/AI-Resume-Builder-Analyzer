// src/components/ui/BuilderSidebar.jsx
import React, { useState, useEffect, useMemo } from "react";
import { motion, AnimatePresence } from "framer-motion";
import {
    User,
    FileText,
    Briefcase,
    GraduationCap,
    Code,
    FileImage,
    Award,
    Languages,
    Users,
    ChevronLeft,
    ChevronRight,
    Check,
    X,
    Menu,
    Sparkles,
    Eye,
    AlertCircle,
    Clock,
    TrendingUp,
    Shield,
    Star,
    ArrowRight,
    PlusCircle,
    MinusCircle,
    EyeOff,
    Eye as EyeIcon,
    Settings,
    Download,
    Save,
    HelpCircle,
    Zap,
    Target,
    Circle,
    CircleCheck
} from "lucide-react";

const SECTIONS = [
    {
        id: "personalInfo",
        label: "Personal Info",
        icon: User,
        color: "#4f46e5",
        required: true,
        description: "Contact details",
        fields: 4
    },
    {
        id: "summary",
        label: "Summary",
        icon: FileText,
        color: "#059669",
        required: true,
        description: "Professional summary",
        fields: 1
    },
    {
        id: "experience",
        label: "Experience",
        icon: Briefcase,
        color: "#3b82f6",
        required: true,
        description: "Work history",
        fields: 5
    },
    {
        id: "education",
        label: "Education",
        icon: GraduationCap,
        color: "#8b5cf6",
        required: true,
        description: "Academic background",
        fields: 4
    },
    {
        id: "skills",
        label: "Skills",
        icon: Code,
        color: "#f59e0b",
        required: true,
        description: "Technical skills",
        fields: 3
    },
    {
        id: "projects",
        label: "Projects",
        icon: FileImage,
        color: "#10b981",
        required: false,
        description: "Notable projects",
        fields: 3
    },
    {
        id: "certifications",
        label: "Certifications",
        icon: Award,
        color: "#ef4444",
        required: false,
        description: "Certifications & Awards",
        fields: 2
    },
    {
        id: "languages",
        label: "Languages",
        icon: Languages,
        color: "#06b6d4",
        required: false,
        description: "Language proficiency",
        fields: 2
    },
    {
        id: "references",
        label: "References",
        icon: Users,
        color: "#8b5cf6",
        required: false,
        description: "Professional references",
        fields: 3
    },
];

// ============================
// SUB-COMPONENTS
// ============================

// 1. Progress Bar Component
const ProgressBar = ({ progress, completedCount, totalRequired, size = "md" }) => {
    const sizes = {
        sm: { height: "h-1", text: "text-xs" },
        md: { height: "h-2", text: "text-sm" },
        lg: { height: "h-3", text: "text-base" }
    };

    const { height, text } = sizes[size];

    return (
        <div className="space-y-2">
            <div className="flex justify-between items-center">
                <span className={`${text} font-medium text-gray-700`}>Progress</span>
                <span className={`${text} font-bold ${progress === 100 ? 'text-green-600' : 'text-blue-600'}`}>
                    {progress}%
                </span>
            </div>
            <div className={`w-full ${height} bg-gray-200 rounded-full overflow-hidden`}>
                <motion.div
                    initial={{ width: 0 }}
                    animate={{ width: `${progress}%` }}
                    transition={{ duration: 0.8, ease: "easeOut" }}
                    className={`h-full rounded-full ${progress === 100
                        ? 'bg-gradient-to-r from-green-500 to-emerald-500'
                        : 'bg-gradient-to-r from-blue-500 to-purple-500'
                        }`}
                />
            </div>
            <div className="flex justify-between text-xs text-gray-500">
                <span>{completedCount} completed</span>
                <span>{totalRequired} required</span>
            </div>
        </div>
    );
};

// 2. Section Item Component
const SectionItem = ({ section, isActive, isCompleted, onClick, isMobile }) => {
    const Icon = section.icon;

    return (
        <motion.button
            whileHover={{ x: 2 }}
            whileTap={{ scale: 0.98 }}
            onClick={onClick}
            className={`w-full text-left p-3 rounded-lg transition-all duration-150 ${isActive
                ? 'bg-blue-50 border border-blue-200 shadow-sm'
                : 'bg-white border border-gray-200 hover:border-blue-300 hover:bg-blue-50/50'
                }`}
        >
            <div className="flex items-center gap-3">
                <div className="relative flex-shrink-0">
                    <div className={`w-10 h-10 rounded-lg flex items-center justify-center ${isActive ? 'ring-1 ring-blue-500' : ''
                        }`} style={{
                            backgroundColor: isActive ? section.color : `${section.color}10`,
                            color: isActive ? 'white' : section.color
                        }}>
                        <Icon className="w-5 h-5" />
                    </div>
                    {isCompleted && (
                        <div className="absolute -top-1 -right-1 w-4 h-4 bg-green-500 rounded-full flex items-center justify-center border-2 border-white">
                            <Check className="w-2 h-2 text-white" />
                        </div>
                    )}
                </div>

                <div className="flex-1 min-w-0">
                    <div className="flex items-center justify-between mb-1">
                        <span className={`font-medium text-sm truncate ${isActive ? 'text-gray-900' : 'text-gray-800'
                            }`}>
                            {section.label}
                        </span>
                        <div className="flex items-center gap-1">
                            {section.required ? (
                                <span className={`text-[10px] px-1.5 py-0.5 rounded-full font-medium ${isCompleted
                                    ? 'bg-green-100 text-green-700 border border-green-200'
                                    : 'bg-red-100 text-red-700 border border-red-200'
                                    }`}>
                                    {isCompleted ? 'Done' : 'Required'}
                                </span>
                            ) : (
                                <span className="text-[10px] px-1.5 py-0.5 bg-gray-100 text-gray-700 rounded-full border border-gray-300">
                                    Optional
                                </span>
                            )}
                        </div>
                    </div>

                    <p className="text-xs text-gray-600 mb-2 truncate">
                        {section.description}
                    </p>

                    <div className="flex items-center justify-between">
                        <div className="text-xs text-gray-500">
                            {section.fields} fields
                        </div>
                        {!isCompleted && (
                            <div className="flex items-center gap-1 text-xs text-amber-600">
                                <AlertCircle className="w-3 h-3" />
                                <span>Incomplete</span>
                            </div>
                        )}
                    </div>
                </div>
            </div>
        </motion.button>
    );
};

// 3. Optional Sections Toggle
const OptionalSectionsToggle = ({ showOptional, onToggle, optionalCount }) => {
    return (
        <motion.div
            initial={{ opacity: 0, y: 10 }}
            animate={{ opacity: 1, y: 0 }}
            className="mt-4 pt-4 border-t border-gray-200"
        >
            <button
                onClick={onToggle}
                className="w-full p-3 bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg hover:border-blue-300 hover:bg-blue-100/50 transition-all"
            >
                <div className="flex items-center justify-between">
                    <div className="flex items-center gap-2">
                        {showOptional ? (
                            <MinusCircle className="w-4 h-4 text-blue-600" />
                        ) : (
                            <PlusCircle className="w-4 h-4 text-blue-600" />
                        )}
                        <div className="text-left">
                            <div className="text-sm font-medium text-gray-900">
                                {showOptional ? 'Hide' : 'Show'} Optional Sections
                            </div>
                            <div className="text-xs text-gray-600">
                                {optionalCount} additional sections available
                            </div>
                        </div>
                    </div>
                    <ChevronRight className={`w-4 h-4 text-blue-500 transition-transform ${showOptional ? 'rotate-90' : ''}`} />
                </div>
            </button>
        </motion.div>
    );
};

// 4. Completion Status Card
const CompletionStatusCard = ({ progress, completedRequired, totalRequired }) => {
    const remaining = totalRequired - completedRequired;

    return (
        <div className={`p-3 rounded-lg ${progress === 100
            ? 'bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200'
            : 'bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200'
            }`}>
            <div className="flex items-center gap-2">
                {progress === 100 ? (
                    <Star className="w-4 h-4 text-green-600" />
                ) : (
                    <Target className="w-4 h-4 text-blue-600" />
                )}
                <div className="flex-1">
                    <div className="text-sm font-medium text-gray-900">
                        {progress === 100 ? 'All Sections Complete!' : 'Complete Required Sections'}
                    </div>
                    <div className="text-xs text-gray-600">
                        {progress === 100
                            ? 'Ready to create your resume'
                            : `${remaining} required section${remaining !== 1 ? 's' : ''} remaining`
                        }
                    </div>
                </div>
            </div>
        </div>
    );
};

// 5. Status Legend
const StatusLegend = () => {
    return (
        <div className="flex items-center justify-center gap-4 text-xs text-gray-600">
            <div className="flex items-center gap-1">
                <div className="w-2 h-2 bg-green-500 rounded-full"></div>
                <span>Completed</span>
            </div>
            <div className="flex items-center gap-1">
                <div className="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span>Active</span>
            </div>
            <div className="flex items-center gap-1">
                <div className="w-2 h-2 bg-gray-400 rounded-full"></div>
                <span>Pending</span>
            </div>
        </div>
    );
};

// 6. Collapsed Sidebar
const CollapsedSidebar = ({ sections, activeSection, completedSections, onSectionChange, progress }) => {
    return (
        <motion.aside
            initial={{ width: 0 }}
            animate={{ width: 64 }}
            exit={{ width: 0 }}
            className="relative h-screen z-40 bg-white border-r border-gray-200 flex flex-col shadow-sm"
        >
            <div className="p-3 border-b border-gray-200">
                <div className="text-center">
                    <div className="text-xs font-bold text-blue-600">{progress}%</div>
                    <div className="w-8 h-1 mx-auto bg-gray-200 rounded-full overflow-hidden mt-1">
                        <div
                            className="h-full bg-blue-500 rounded-full"
                            style={{ width: `${progress}%` }}
                        />
                    </div>
                </div>
            </div>

            <div className="flex-1 overflow-y-auto py-4">
                <div className="space-y-4">
                    {sections.map((section) => {
                        const isActive = activeSection === section.id;
                        const isCompleted = completedSections.includes(section.id);
                        const Icon = section.icon;

                        return (
                            <button
                                key={section.id}
                                onClick={() => onSectionChange(section.id)}
                                className="relative w-full flex items-center justify-center p-2 group"
                                title={section.label}
                            >
                                <div className={`p-2 rounded-lg transition-all ${isActive
                                    ? 'bg-blue-100 text-blue-600 shadow-sm'
                                    : 'text-gray-600 hover:bg-gray-100'
                                    }`}>
                                    <Icon className="w-5 h-5" />
                                </div>
                                {isCompleted && (
                                    <div className="absolute -top-1 -right-1 w-3 h-3 bg-green-500 rounded-full border-2 border-white" />
                                )}
                            </button>
                        );
                    })}
                </div>
            </div>

            <div className="p-3 border-t border-gray-200">
                <div className="space-y-2">
                    <div className="flex items-center justify-center gap-1">
                        <div className="w-2 h-2 bg-green-500 rounded-full"></div>
                        <div className="text-xs text-gray-600">Done</div>
                    </div>
                    <div className="flex items-center justify-center gap-1">
                        <div className="w-2 h-2 bg-blue-500 rounded-full"></div>
                        <div className="text-xs text-gray-600">Active</div>
                    </div>
                </div>
            </div>
        </motion.aside>
    );
};

// 7. Mobile Overlay
const MobileOverlay = ({ isVisible, onClose }) => {
    return (
        <AnimatePresence>
            {isVisible && (
                <motion.div
                    initial={{ opacity: 0 }}
                    animate={{ opacity: 1 }}
                    exit={{ opacity: 0 }}
                    onClick={onClose}
                    className="fixed inset-0 bg-black/30 z-40 md:hidden"
                />
            )}
        </AnimatePresence>
    );
};

// 8. Toggle Button
const ToggleButton = ({ isVisible, onClick, completedCount }) => {
    return (
        <motion.button
            initial={{ opacity: 0, x: -10 }}
            animate={{ opacity: 1, x: 0 }}
            whileHover={{ scale: 1.05 }}
            whileTap={{ scale: 0.95 }}
            onClick={onClick}
            className="fixed left-4 top-1/2 transform -translate-y-1/2 z-50 w-10 h-10 bg-white rounded-full shadow-lg border border-gray-300 flex items-center justify-center hover:shadow-xl hover:border-blue-400 transition-all group"
            aria-label="Show Sidebar"
        >
            <ChevronRight className="w-5 h-5 text-gray-600 group-hover:text-blue-600 transition-colors" />
            {completedCount > 0 && (
                <span className="absolute -right-1 -top-1 w-4 h-4 bg-blue-500 text-white text-xs rounded-full flex items-center justify-center font-bold">
                    {completedCount}
                </span>
            )}
        </motion.button>
    );
};

// ============================
// MAIN BUILDER SIDEBAR COMPONENT
// ============================

const BuilderSidebar = ({
    activeSection,
    onSectionChange,
    completedSections = [],
    user,
    isVisible,
    onToggle,
    isMobile = false
}) => {
    const [showOptional, setShowOptional] = useState(true);
    const [isCollapsed, setIsCollapsed] = useState(false);

    // Calculate progress and stats
    const { progress, completedCount, totalRequired, optionalCount } = useMemo(() => {
        const requiredSections = SECTIONS.filter((s) => s.required);
        const completedRequired = completedSections.filter(id =>
            SECTIONS.find(s => s.id === id && s.required)
        );

        return {
            progress: Math.round((completedRequired.length / requiredSections.length) * 100),
            completedCount: completedRequired.length,
            totalRequired: requiredSections.length,
            optionalCount: SECTIONS.filter(s => !s.required).length
        };
    }, [completedSections]);

    // Filter sections based on showOptional setting
    const filteredSections = useMemo(() => {
        return showOptional ?
            SECTIONS :
            SECTIONS.filter(s => s.required);
    }, [showOptional]);

    // If sidebar is collapsed on desktop
    if (isCollapsed && !isMobile) {
        return (
            <CollapsedSidebar
                sections={SECTIONS}
                activeSection={activeSection}
                completedSections={completedSections}
                onSectionChange={onSectionChange}
                progress={progress}
            />
        );
    }

    // If sidebar is hidden (not mobile)
    if (!isVisible && !isMobile) {
        return (
            <ToggleButton
                isVisible={isVisible}
                onClick={onToggle}
                completedCount={completedSections.length}
            />
        );
    }

    // Mobile: show nothing when hidden
    if (isMobile && !isVisible) return null;

    return (
        <>
            {/* Mobile Overlay */}
            <MobileOverlay
                isVisible={isMobile && isVisible}
                onClose={onToggle}
            />

            {/* Main Sidebar */}
            <motion.aside
                initial={{ x: isMobile ? -320 : 0 }}
                animate={{ x: 0 }}
                exit={{ x: isMobile ? -320 : 0 }}
                transition={{ type: "spring", damping: 25, stiffness: 200 }}
                className={`fixed md:relative top-0 left-0 h-screen z-50 bg-white border-r border-gray-200 flex flex-col shadow-lg ${isMobile ? 'w-80' : 'w-72'
                    }`}
            >
                {/* Header */}
                <div className="p-5 border-b border-gray-200">
                    <div className="flex items-center justify-between mb-4">
                        <div className="flex items-center gap-3">
                            <div className="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-500 rounded-lg flex items-center justify-center shadow-sm">
                                <FileText className="w-5 h-5 text-white" />
                            </div>
                            <div>
                                <h1 className="font-bold text-gray-900 text-base">Resume Builder</h1>
                                <p className="text-xs text-gray-500">Complete all sections</p>
                            </div>
                        </div>

                        <div className="flex items-center gap-1">
                            {!isMobile && (
                                <button
                                    onClick={() => setIsCollapsed(true)}
                                    className="p-1.5 hover:bg-gray-100 rounded-lg transition-colors"
                                    aria-label="Collapse Sidebar"
                                    title="Collapse"
                                >
                                    <ChevronLeft className="w-4 h-4 text-gray-500" />
                                </button>
                            )}
                            <button
                                onClick={onToggle}
                                className="p-1.5 hover:bg-gray-100 rounded-lg transition-colors"
                                aria-label="Close Sidebar"
                            >
                                {isMobile ? (
                                    <X className="w-4 h-4 text-gray-500" />
                                ) : (
                                    <ChevronLeft className="w-4 h-4 text-gray-500" />
                                )}
                            </button>
                        </div>
                    </div>

                    {/* Progress Bar */}
                    <ProgressBar
                        progress={progress}
                        completedCount={completedCount}
                        totalRequired={totalRequired}
                        size="md"
                    />
                </div>

                {/* Sections Header */}
                <div className="p-3 border-b border-gray-200 bg-gray-50">
                    <div className="flex items-center justify-between">
                        <h2 className="text-sm font-semibold text-gray-900">Sections</h2>
                        <button
                            onClick={() => setShowOptional(!showOptional)}
                            className="flex items-center gap-1 px-2 py-1 text-xs bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
                        >
                            {showOptional ? (
                                <>
                                    <EyeOff size={12} />
                                    <span>Hide Optional</span>
                                </>
                            ) : (
                                <>
                                    <EyeIcon size={12} />
                                    <span>Show All</span>
                                </>
                            )}
                        </button>
                    </div>
                </div>

                {/* Sections List */}
                <div className="flex-1 overflow-y-auto py-3 px-3">
                    <div className="space-y-2">
                        {filteredSections.map((section) => (
                            <SectionItem
                                key={section.id}
                                section={section}
                                isActive={activeSection === section.id}
                                isCompleted={completedSections.includes(section.id)}
                                onClick={() => {
                                    onSectionChange(section.id);
                                    if (isMobile) onToggle();
                                }}
                                isMobile={isMobile}
                            />
                        ))}
                    </div>

                    {/* Optional Sections Toggle */}
                    {!showOptional && optionalCount > 0 && (
                        <OptionalSectionsToggle
                            showOptional={showOptional}
                            onToggle={() => setShowOptional(!showOptional)}
                            optionalCount={optionalCount}
                        />
                    )}
                </div>

                {/* Footer */}
                <div className="p-4 border-t border-gray-200">
                    <CompletionStatusCard
                        progress={progress}
                        completedRequired={completedCount}
                        totalRequired={totalRequired}
                    />

                    <div className="mt-3">
                        <StatusLegend />
                    </div>
                </div>
            </motion.aside>
        </>
    );
};

export default BuilderSidebar;