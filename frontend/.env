# ================= ENVIRONMENT SPECIFIC OVERRIDES =================
# These will override above settings based on NODE_ENV

# Development overrides
if NODE_ENV=development
  VITE_APP_MODE=development
  VITE_DEBUG=true
  VITE_LOG_LEVEL=debug
  VITE_SOURCEMAP=true
  VITE_ENABLE_MOCK_API=true
  VITE_ENABLE_EMAIL_VERIFICATION=false
  VITE_ENABLE_GOOGLE_OAUTH=false
  VITE_ENABLE_ANALYTICS=false
  VITE_ENABLE_SECURITY_HEADERS=false
  VITE_CSP_ENABLED=false
  VITE_ENABLE_HEALTH_CHECK=false
  VITE_ENABLE_DEMO_MODE=true
  VITE_USE_MOCK_API=true
endif

# Production overrides
if NODE_ENV=production
  VITE_APP_MODE=production
  VITE_DEBUG=false
  VITE_LOG_LEVEL=error
  VITE_SOURCEMAP=false
  VITE_MINIFY=true
  VITE_ENABLE_HEALTH_CHECK=true
  VITE_ENABLE_ANALYTICS=true
  VITE_ENABLE_SECURITY_HEADERS=true
  VITE_CSP_ENABLED=true
  VITE_ENABLE_MOCK_API=false
  VITE_USE_MOCK_API=false
  VITE_ENABLE_DEMO_MODE=false
  VITE_ENABLE_EMAIL_VERIFICATION=true
  VITE_ENABLE_GOOGLE_OAUTH=true
endif

# Staging overrides
if NODE_ENV=staging
  VITE_APP_MODE=staging
  VITE_DEBUG=true
  VITE_LOG_LEVEL=info
  VITE_SOURCEMAP=true
  VITE_ENABLE_HEALTH_CHECK=true
  VITE_ENABLE_ANALYTICS=true
  VITE_ENABLE_SECURITY_HEADERS=true
  VITE_ENABLE_MOCK_API=false
  VITE_USE_MOCK_API=false
  VITE_ENABLE_DEMO_MODE=false
endif

# ================= LEGACY SUPPORT =================
