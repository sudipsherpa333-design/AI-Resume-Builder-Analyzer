# ========================================
# APPLICATION CONFIGURATION
# ========================================
VITE_APP_NAME="AI Resume Builder"
VITE_APP_VERSION="2.0.0"
VITE_APP_DESCRIPTION="Build, analyze, and optimize your resume with AI"
VITE_APP_MODE=development
VITE_API_VERSION=2.0.0

# ========================================
# BACKEND API CONFIGURATION
# ========================================
VITE_API_URL=http://localhost:5001/api
REACT_APP_API_URL=http://localhost:5001
VITE_API_TIMEOUT=30000
VITE_MAX_REQUEST_BODY_SIZE=10485760  # 10MB

# ========================================
# SOCKET.IO CONFIGURATION
# ========================================
VITE_SOCKET_IO_URL=http://localhost:5001
VITE_SOCKET_IO_ENABLED=true
VITE_SOCKET_RECONNECTION_ATTEMPTS=5
VITE_SOCKET_RECONNECTION_DELAY=1000
VITE_SOCKET_PING_TIMEOUT=60000
VITE_SOCKET_PING_INTERVAL=25000
VITE_ALLOW_ANONYMOUS_SOCKET=true

# ========================================
# AI SERVICES CONFIGURATION
# ========================================
VITE_AI_ENABLED=true
VITE_AI_MODEL=gpt-3.5-turbo
VITE_AI_TIMEOUT=30000
VITE_AI_MAX_TOKENS=2000
