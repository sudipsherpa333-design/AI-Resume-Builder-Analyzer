VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false  # Disable for debugging
VITE_BUILD_TARGET=es2020
VITE_BUILD_OUTDIR=dist
VITE_COMPRESSION_LEVEL=6

# ========================================
# SECURITY
# ========================================
VITE_CSP_ENABLED=true
VITE_CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:5001 ws://localhost:5001;"
