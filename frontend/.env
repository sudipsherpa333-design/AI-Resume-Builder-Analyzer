VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false  # Disabled for development
VITE_ENABLE_WEB_VITALS=false  # Disabled for development

# ================= SECURITY =================
