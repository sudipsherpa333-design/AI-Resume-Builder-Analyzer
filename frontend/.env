VITE_HSTS_ENABLED=false
VITE_HSTS_MAX_AGE=31536000
VITE_XSS_PROTECTION_ENABLED=false
VITE_CONTENT_TYPE_OPTIONS=false

# ================= FILE UPLOADS =================
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
VITE_ENABLE_IMAGE_COMPRESSION=true
