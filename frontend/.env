VITE_AUTH_ADMIN_KEY=ai_resume_admin
VITE_AUTH_REMEMBER_ME=true
VITE_JWT_EXPIRE=30d

# ========================================
# GOOGLE OAUTH CONFIGURATION
# ========================================
VITE_GOOGLE_OAUTH_ENABLED=true
VITE_GOOGLE_CLIENT_ID=35584631622-tl8qqbeer98vbd4t11thjfpqfpv86dlp.apps.googleusercontent.com
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/api/auth/google/callback
VITE_GOOGLE_SCOPE=email profile

# ========================================
# ADMIN PANEL CONFIGURATION
# ========================================
VITE_ADMIN_PANEL_ENABLED=true
VITE_ADMIN_SESSION_TIMEOUT=86400000  # 24 hours
VITE_ADMIN_RATE_LIMIT_MAX=30
VITE_ADMIN_DEFAULT_EMAIL=superadmin@resume.ai

# ========================================
# FEATURE FLAGS
