VITE_FEATURE_GOOGLE_OAUTH=true
VITE_FEATURE_FILE_UPLOADS=true
VITE_FEATURE_EMAIL_NOTIFICATIONS=false
VITE_FEATURE_REAL_TIME_COLLABORATION=true
VITE_FEATURE_ADMIN_DASHBOARD=true

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
VITE_MAX_FILE_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt
VITE_UPLOAD_CHUNK_SIZE=1048576  # 1MB chunks

# ========================================
# UI/UX CONFIGURATION
# ========================================
VITE_DEFAULT_THEME=light
VITE_PRIMARY_COLOR=#3b82f6
VITE_SECONDARY_COLOR=#10b981
VITE_ACCENT_COLOR=#8b5cf6
VITE_FONT_FAMILY=Inter, system-ui, -apple-system, sans-serif
VITE_FONT_SIZE=16px

# ========================================
# PERFORMANCE & OPTIMIZATION
# ========================================
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true
VITE_AI_CACHE_EXPIRY=300000  # 5 minutes
VITE_RESUME_CACHE_EXPIRY=3600000  # 1 hour
VITE_USER_SESSION_CACHE=1800000  # 30 minutes
VITE_LAZY_LOAD_ENABLED=true
VITE_PREFETCH_ENABLED=true

# ========================================
# RATE LIMITING (Frontend)
# ========================================
VITE_RATE_LIMIT_MAX=100
VITE_RATE_LIMIT_WINDOW=900000  # 15 minutes
VITE_AUTH_RATE_LIMIT_MAX=5
VITE_CONNECTION_TIMEOUT=10000

# ========================================
# DEBUG & DEVELOPMENT
# ========================================
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_DEBUG_SOCKET=true
VITE_DEBUG_AI=true
VITE_DEBUG_AUTH=false
VITE_ENABLE_MOCK_AI=false
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true

