# ================================================
# AI RESUME BUILDER - ENVIRONMENT CONFIGURATION
# ================================================

# ================= ENVIRONMENT =================
# Set to 'production', 'development', or 'staging'
NODE_ENV=development
VITE_APP_MODE=development

# ================= APPLICATION =================
VITE_APP_NAME="AI Resume Builder Pro"
VITE_APP_VERSION="1.0.0"
VITE_APP_TITLE="AI Resume Builder - Create Professional Resumes"
VITE_APP_DESCRIPTION="Build, analyze, and optimize your resume with AI-powered tools"
VITE_APP_KEYWORDS="resume,builder,AI,ATS,job,career"
VITE_APP_AUTHOR="AI Resume Builder Team"
VITE_APP_URL=http://localhost:3000

# ================= API CONFIGURATION =================
# Backend API URL (without trailing slash)
# .env or .env.local
VITE_API_URL=http://localhost:5001/api
VITE_SOCKET_URL=http://localhost:5001VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1

# MOCK API SETTINGS - For development without backend
VITE_USE_MOCK_API=true  # Set to true for development without backend
VITE_MOCK_API_DELAY=300  # Delay in milliseconds for mock API responses
VITE_MOCK_API_RESPONSE=true  # Always return mock responses
VITE_MOCK_API_ERROR_RATE=0  # Percentage of mock requests that should fail (0-100)

# ================= AUTHENTICATION =================
# Google OAuth (Get from Google Cloud Console)
VITE_GOOGLE_CLIENT_ID=35584631622-mkusp15h0p56not7i0eoo77apkhm1ca4.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# JWT Configuration
VITE_JWT_SECRET=your-jwt-secret-key-change-in-production
VITE_JWT_EXPIRE=7d
VITE_JWT_REFRESH_EXPIRE=30d

# ================= FEATURE FLAGS =================
# Enable/disable features
VITE_ENABLE_AI=true
VITE_ENABLE_GOOGLE_OAUTH=false  # Disabled for development
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_PREMIUM_FEATURES=false
VITE_ENABLE_ANALYTICS=false  # Disabled for development
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true  # Enabled for development
VITE_ENABLE_PWA=false  # Disabled for development

# Email Verification (set to false for development)
VITE_ENABLE_EMAIL_VERIFICATION=false

# ================= AI SERVICES =================
# OpenAI Configuration
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here
VITE_OPENAI_MODEL=gpt-3.5-turbo  # Changed to more accessible model
VITE_OPENAI_MAX_TOKENS=2000
VITE_OPENAI_TEMPERATURE=0.7

# Resume Analysis AI
VITE_AI_ATS_CHECK_ENABLED=true
VITE_AI_SUGGESTIONS_ENABLED=true
VITE_AI_CONTENT_GENERATION=true
VITE_AI_OPTIMIZATION_ENABLED=true

# ================= UI/UX CONFIGURATION =================
# Theme Colors
VITE_PRIMARY_COLOR=#3B82F6
VITE_SECONDARY_COLOR=#10B981
VITE_ACCENT_COLOR=#8B5CF6
VITE_DANGER_COLOR=#EF4444
VITE_WARNING_COLOR=#F59E0B
VITE_SUCCESS_COLOR=#10B981

# Theme Settings
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_RTL_SUPPORT=false

# Layout
VITE_SIDEBAR_COLLAPSED=false
VITE_NAVBAR_STICKY=true
VITE_FOOTER_VISIBLE=true

# ================= PERFORMANCE =================
# Loading & Caching
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_SERVICE_WORKER=false  # Disabled for development
VITE_CACHE_DURATION=3600
VITE_PRELOAD_CRITICAL_CHUNKS=true

# Health Checks
VITE_ENABLE_HEALTH_CHECK=false  # Disabled for development
VITE_HEALTH_CHECK_INTERVAL=30000
VITE_HEALTH_CHECK_TIMEOUT=10000

# ================= ANALYTICS & MONITORING =================
# Google Analytics
VITE_GA_TRACKING_ID=UA-XXXXX-Y
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error Tracking (Sentry)
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/your-project-id
